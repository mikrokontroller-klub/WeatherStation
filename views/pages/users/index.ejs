<%- contentFor('content') %>
<div class="row">
    <div class="col col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title text-center">Users</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-12">
                        <div class="table-responsive">
                            <table class="table">
                                <thead class="text-primary">
                                    <tr>
                                        <th>Id</th>
                                        <th>Name</th>
                                    </tr>
                                </thead>
                                <tbody>
                                <% users.forEach(user => { %>
                                    <tr>
                                        <td><%= user.id %></td>
                                        <td><%= user.username %></td>
                                        <td class="text-right">
                                            <a href="/users/<%= user.id %>" class="btn btn-success btn-sm m-1">View</a>
                                            <a href="/users/<%= user.id %>/edit" class="btn btn-info btn-sm m-1">Edit</a>
                                            <form class="d-inline" action="/users/<%= user.id %>?_method=DELETE" method="post">
                                                <button type="submit" class="btn btn-danger btn-sm" <%= user.username === session.username ? 'disabled' : '' %> >Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                <% })%>
                                </tbody>
                            </table>
                            <div class="d-flex justify-content-end">
                                <a href="/users/new" class="btn btn-success mr-4">Add New</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
