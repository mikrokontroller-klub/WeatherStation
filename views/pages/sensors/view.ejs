<%- contentFor('content') %>
<div class="row">
    <div class="col col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title text-center">My Temperautre sensor</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-12 col-xl-6">
                        <div class="ml-3 mr-3">
                            <h4 class="text-secondary">Description</h4>
                            <p class="text-secondary">
                                <%= sensor.description %>
                            </p>
                        </div>
                    </div>
                    <div class="col-12 col-xl-6">
                        <div class="aspect-ratio-16-9 m-3 rounded-lg shadow-lg">
                            <iframe
                                width="100%"
                                height="100%"
                                class="rounded-lg"
                                style="border: 0; position: absolute"
                                loading="lazy"
                                allowfullscreen
                                src="https://www.google.com/maps/embed/v1/place?key=AIzaSyBvza2p5YhimD9H7ObYa4GJf4U4_v7S72M&q=<%= sensor.coordinate.latitude + "+" + sensor.coordinate.longitude %>"
                            >
                            </iframe>
                        </div>
                    </div>
                    <div class="col-12">
                        <canvas id="chart-sensor-1"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
